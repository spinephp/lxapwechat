page{
  background: #e6e6e6;
}
.box{
   padding: 10rpx 3% 0;
   
}
.item{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
 
}
.item .radio{
  flex: none;
  width:10%;
  text-align: center;
  line-height: 160rpx;
  
  
}
.item .redpackage{
  flex: none;
  height:160rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  background: #fff;
  width: 90%;
  position: relative;
}

.item .redpackage image{
  position: absolute;
  top:-2%;
  left: 0;
  width: 100%;
  height: 104%;
  z-index: 99;
}
.item .redpackage .money{
  width:34%;
  height: 100%;
  display: flex;
  justify-content:center;
  align-items:center;
  color:#fff;
  line-height: 100%;
  font-size:48rpx;
  z-index: 9999
  }

.item .redpackage .illustrate{
  height: 100%;
  display: flex;
  flex-direction:column;
  justify-content:center;
  align-items:flex-start;
  padding-left: 30rpx;
  color:#818181;
  z-index: 999;
  width: 63%

}
.item .redpackage .illustrate view:first-child{
  margin-bottom: 10rpx;
  font-size: 32rpx;
}
.item .redpackage .illustrate view:first-child{
  display:flex;
  flex-direction:row;
}
.item .redpackage .illustrate .prompt{
  width: 150rpx;

}
.item .redpackage .illustrate .org_name{
  flex-wrap: wrap;
  overflow: hidden
}
.item .redpackage .illustrate view:last-child{
  font-size: 26rpx;
}
