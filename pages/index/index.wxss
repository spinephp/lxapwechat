@import '/pages/template/template.wxss';
.header {
  display: flex;
  height: 120rpx;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: fixed;
  top:0;
  left: 0;
  z-index: 9999;
  background: #fff;
}

.header view {
  flex: none;
}
.header .position{
  width:30%;
}
.header .position image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.header .position .text {
  vertical-align: middle;
  font-size: 28rpx;
  color: #333;
  display: inline-block;
  width: 160rpx;
  overflow: hidden;
  word-break: nowrap;
  height: 40rpx;
}
.header .position .arrow{
  height: 24rpx;
  width: 24rpx;
  float: right;
  margin-top: 13rpx;

}

.header .search {
  width: 60%;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0 20rpx;
  position: relative;
  background:#F2F2F2;
  line-height: 60rpx
}

.header .search image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
  margin-left: 20rpx;
}
.header .search input{
  position: absolute;
  top:0;
  left: 70rpx;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
}



.hot {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  flex-wrap: wrap;
  border-bottom: 10rpx solid #E6E6E6;
  padding-bottom: 36rpx;
}

.hot .item {
  flex: 0 0 20%;
  text-align: center;
  margin-top: 36rpx;
  font-size: 24rpx;
  color: #000;
  
}

.hot .item image {
  width: 60%;
  height: 90rpx;
  color: #666;
}



.main .title {
  text-align: center;
  font-size: 36rpx;
  color: #000;
  height: 100rpx;
  line-height: 100rpx;
  
}

.main .order {
  font-size: 28rpx;
  border-top:1px solid #F2F2F2;
  border-bottom:1px solid #F2F2F2;
  height: 70rpx;
  line-height: 70rpx;
  color: #666;
}

.main .order text {
  float: left;
  width: 33.33%;
  text-align: center;
}

.main .order .cur{
  color:#000;
}
.main .tag {
  display: flex;
  justify-content: space-around;
  margin-top: 24rpx;
  margin-bottom: 50rpx;
  font-size: 24rpx;
}

.main .tag view {
  flex: 0 0 22%;
  text-align: center;
  background: #f8f8f8;
  height: 56rpx;
  line-height: 56rpx;
  color: #666;
}
.main .tag .cur_Type{
  background: #5493fa;
  color: #fff;
}

.kf_button{
  background-color: rgba(255, 255, 255, 0);
  border: 0px;
  height: 100rpx;
  right: 0;
  bottom: 20rpx;
  position: fixed;
}
.kf_button::after{
  border: 0px;
}
.kf_image{
  z-index: 9999;
  width: 100rpx;
  height: 100rpx;
}