/* pages/myevaluating/myevaluating.wxss */
page{
  height:100%;
  display: flex;
  flex-direction: column;
   justify-content:space-between;
 
}
.top{
  display: flex;
  justify-content:flex-start;
  align-items: center;
  padding:20rpx;
  border-bottom: 1px solid #ddd;
}
.top image{
  width:240rpx;
  height:120rpx;
  margin-right: 20rpx
}
.top .c_name{
  font-size: 32rpx;
  margin-right: 20rpx;
}
.top .container{
  font-size: 60rpx;
  background-color: white;
}
.top .container image{
  width:40rpx;
  height:40rpx;
  margin:0 2rpx;
  padding:0;
  background-color: white;
}
.top .container .activestar{
  color: orange;
}
.content{
  width:100%;
  padding:20rpx;
}
.content textarea{
  width:95%;
  height: 500rpx;
}
.content .imagesview{
  width:100%;
  display: flex;
  flex-wrap:wrap;
  line-height: 240rpx;
  margin: 40rpx 0;
}
.content image{
  width:160rpx;
  height: 160rpx;
}
.content .imgview{
  display: flex;
  width:180rpx;
}
.content .imgview .delete{
  margin-left: -20rpx;
  margin-top: -20rpx;
  width: 40rpx;
  height: 40rpx;
}
.footer{
  text-align: center;
  font-size: 36rpx;
  background-color: rgb(109, 161, 245);
  color:white;
  padding:30rpx;
}