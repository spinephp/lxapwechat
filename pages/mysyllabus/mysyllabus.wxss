/* pages/mysyllabus/mysyllabus.wxss */
page{
}
.select_box{
  background: #fff;
  width: 50%;
  margin: 10rpx 0 0 10rpx;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 20rpx;
  height: 20rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.section{
  display: flex;
  flex-direction: row;

  margin-top: 40rpx;
}
.left{
  width:25%;
  display: flex;
  flex-direction: column;
  margin-left:20rpx;
  color:#ccc;
}
.left .daterow{
  display: inline-flex;
  align-items: center;
  margin: -30rpx 20rpx -30rpx 0rpx;
}
.left .dot{
  width:30rpx;
  height:30rpx;
  background-color:#ddd;
  border-radius: 50%; 
}
.left .dot_active{
  width:30rpx;
  height:30rpx;
  background-color:blue;
  border-radius: 50%; 
  margin-left:0rpx;
}
.left .date{
  margin: 5rpx 0 0 20rpx;
  font-size:22rpx;
  color:#666666;
}
.left .date_active{
  margin: 5rpx 0 0 20rpx;
  font-size:24rpx;
  color:#333333;
}
.left .vline{
  margin:0 0 0 15rpx;
  font-size:18rpx;
  color:#ccc;
}

.right{
  width:70%;
  display: flex;
  flex-direction: column;
}

.right .context{
  width:85%;
  height:150rpx;
  padding:20rpx;
  margin-bottom: 40rpx;
  line-height: 50rpx;
  color: white;
  border-radius: 10rpx;
  background: linear-gradient(to right, #2f7bfb, #4fbbf7);
}