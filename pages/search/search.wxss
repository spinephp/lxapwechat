.header {
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: #fff;
}

.header view {
  flex: none;
}
.header .type{
  width:20%;
  font-size: 28rpx;
 
}


picker {
  position: relative;
  width: 100%;
   color: #333;
   text-align: center;
}

picker:after {
  content: " ";
  display: inline-block;
  position: absolute;
  top: 50%;
  margin-top: -4rpx;
  right: 20rpx;
  border-color: #444 #fff #fff #fff;
  border-style: solid;
  border-width:14rpx 8rpx 0 8rpx;
  height: 0;
  width: 0;
}


.header .search {
  width: 70%;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0 20rpx;
  position: relative;
  background:#F2F2F2;
  line-height: 60rpx;
  overflow: hidden;
}

.header .search image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
  margin-left: 20rpx;
}
.header .search input{
  position: absolute;
  top:0;
  left: 70rpx;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
}
.header .search text{
  position: absolute;
  right: 0;
  top:0;
  width: 100rpx;
  height: 60rpx;
  background:#5493fa;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  z-index: 9999;
}
.title{
  line-height: 60rpx;
  border-bottom: 1rpx solid #f2f2f2;
  font-size: 30rpx;
  padding: 0 3%;
  color:#666;
}
.list{
  display: flex;
  padding: 3%;
  justify-content: space-between;
  flex-wrap: wrap;
  flex-direction: row;


}
.list .item{
  flex: none;
  padding: 0 30rpx;
  line-height: 50rpx;
  background: #f2f2f2;
  color:#666;
  font-size: 26rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}

